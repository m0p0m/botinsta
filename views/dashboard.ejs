<script>
// Tab Navigation
const tabLinks = document.querySelectorAll('.tab-link');
const tabPanes = document.querySelectorAll('.tab-pane');

tabLinks.forEach(link => {
  link.addEventListener('click', () => {
    const tabName = link.dataset.tab;
    
    // Update active tab link
    tabLinks.forEach(l => l.classList.remove('active'));
    link.classList.add('active');
    
    // Update active tab pane
    tabPanes.forEach(pane => {
      pane.classList.remove('active');
      if (pane.id === tabName) {
        pane.classList.add('active');
      }
    });
  });
});

// Modal Handling
const addAccountBtn = document.getElementById('add-account-btn');
const modal = document.getElementById('add-account-modal');
const closeBtn = modal ? modal.querySelector('.close-btn') : null;

if (addAccountBtn && modal) {
  addAccountBtn.addEventListener('click', () => {
    modal.classList.add('show-modal');
  });
}

if (closeBtn && modal) {
  closeBtn.addEventListener('click', () => {
    modal.classList.remove('show-modal');
  });
  
  window.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.remove('show-modal');
    }
  });
}

// WebSocket for live updates
function initializeWebSocket() {
  try {
    const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
    const ws = new WebSocket(protocol + '//' + window.location.host);

    ws.onmessage = (event) => {
      try {
        const data = JSON.parse(event.data);
        updateBotStatus(data);
      } catch (e) {
        console.error('Failed to parse WebSocket message:', e);
      }
    };

    ws.onerror = (error) => {
      console.error('WebSocket error:', error);
    };

    ws.onclose = () => {
      setTimeout(initializeWebSocket, 3000);
    };
  } catch (e) {
    console.error('WebSocket initialization error:', e);
  }
}

function updateBotStatus(data) {
  const statusEl = document.getElementById('bot-status');
  const activityEl = document.getElementById('bot-activity');
  const updatedEl = document.getElementById('bot-updated');
  const logEl = document.getElementById('activity-log');

  if (data.status && statusEl) {
    statusEl.textContent = data.status === 'running' ? 'ğŸŸ¢ ÙØ¹Ø§Ù„' : 'ğŸ”´ Ù…ØªÙˆÙ‚Ù';
    statusEl.className = `status-value ${data.status === 'running' ? 'active' : 'inactive'}`;
  }

  if (data.message && activityEl) {
    activityEl.textContent = data.message;
  }

  if (data.message && logEl) {
    const entry = document.createElement('div');
    entry.className = 'log-entry';
    const time = new Date().toLocaleTimeString('fa-IR');
    entry.innerHTML = `<span class="log-time">${time}</span><span class="log-msg">${data.message}</span>`;
    logEl.insertBefore(entry, logEl.firstChild);
    
    // Keep only last 20 entries
    while (logEl.children.length > 20) {
      logEl.removeChild(logEl.lastChild);
    }
  }

  if (updatedEl) {
    updatedEl.textContent = new Date().toLocaleTimeString('fa-IR');
  }
}

// Initialize WebSocket when page loads
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', () => {
    if (document.querySelector('.status-panel')) {
      initializeWebSocket();
    }
  });
} else {
  if (document.querySelector('.status-panel')) {
    initializeWebSocket();
  }
}
</script>
