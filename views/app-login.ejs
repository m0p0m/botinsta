<div class="minimal-login">
  <form action="/app-login" method="POST" class="minimal-form">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <input type="text" name="username" placeholder="Username" value="<%= username || '' %>" autocomplete="username" />
    <input type="password" name="password" placeholder="Password" autocomplete="current-password" required />
    <button type="submit">Log in</button>
  </form>
</div>

<style>
  .minimal-login{ display:flex; align-items:center; justify-content:center; min-height:70vh; padding:20px; }
  .minimal-form{ display:flex; flex-direction:column; gap:8px; width:100%; max-width:360px; }
  .minimal-form input{ padding:10px 12px; border:1px solid #ccc; border-radius:6px; font-size:14px; }
  .minimal-form button{ padding:10px 12px; border-radius:6px; border:none; background:#333; color:#fff; font-weight:600; cursor:pointer; }
  .error{ color:#b71c1c; font-size:13px; margin-bottom:6px; }
</style>
